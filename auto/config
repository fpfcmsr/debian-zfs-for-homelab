#!/bin/sh
set -e

# See: Debian Live Manual, "Use example auto scripts" â€” add 'noauto' to avoid recursion.
# lb build/lb config will run auto/config automatically; this wrapper resets options cleanly.
lb config noauto \
  --distribution trixie \
  --architectures amd64 \
  --binary-images iso-hybrid \
  --debian-installer false \
  --archive-areas "main contrib non-free non-free-firmware" \
  --apt-recommends false \
  --bootappend-live "boot=live components zfs.auto=1 console=tty0" \
  "${@}"
